#header
  width: 100%
  padding: 1em;
  color: $header-color
  background-color: $header-color-background

  h1, .h1
    letter-spacing: 0.01em
    font-size: 1.5rem
    line-height: 2rem
    font-style: normal
    font-weight: 700
    margin-top: 0
    margin-bottom: 0
    antialias()

  a
    color: inherit
    text-decoration: none
    background: none

  #logo
    display: inline-block
    float: left
    margin-right: 20px
    width: logo-width
    height: logo-height
    background-repeat: no-repeat
    background-size: logo-width logo-height
    border-radius: 5px

  #nav
    letter-spacing: 0.01em
    font-size: .8rem
    font-style: normal
    font-weight: 200
    color: $color-nav-accent
    ul
      list-style-type: none
      margin: 0
      padding: 0
      line-height: 15px
      a
        margin-right: 15px
        color: $color-nav-accent
      a:hover
          underline(5px, $color-nav-accent)
      li
        display: inline-block
        vertical-align: middle
        margin-right: 15px
        border-right: 1px dotted $color-nav-accent
      li:last-child
        border-right: 0
        margin-right: 0
        a
          margin-right: 0

#header:hover
  #logo
    -webkit-filter: none
    filter: none

#header-content
  margin: auto

@media screen and (max-width:480px)
  #header #logo
    display: block
    float: none
    margin-bottom: (logo-height / 2) - 16
  #header #title
    padding-bottom: (logo-height / 2) - 16
  #header #nav
    ul
      a:hover
        background: none
      li
        display: block
        border-right: 0
        padding: 2px 0
    ul.responsive
      li
        display: block;
  #header
    a#header-link:before,a#header-link:after
      content: " "
      display: table
    a#header-link:after
      clear: both
